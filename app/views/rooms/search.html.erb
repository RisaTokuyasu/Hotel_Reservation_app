<%= form_tag(search_rooms_path, :method =>'get') do %>
  <%= text_field_tag :address, params[:address], class: "form-control", id: "search_area", placeholder:"東京" %> 
  <%= submit_tag '検索' %>
<% end %>


<div class="container-fiuld reservations">
    <h4 class="pb-4">検索結果：<%= @rooms.count %>件</h4>
    <table>
        <thead>
            <tr align="center">
                <th>ルーム画像</th>
                <th>ルーム名</th>
                <th>場所</th>
                <th>料金</th>
            </tr>
        </thead>
        
        <tbody>
          <% if @rooms.present? %>
            <% @rooms.each do |room| %>
                <tr>
                    <td>
                        <image src=" <%= room.picture %> " onerror= "this.src='https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg';" class="reservations-image">
                    </td>
                    <td class="posts-name"><%= link_to "#{room.name}", {controller: 'reservations', action: 'new', id: room.id} %></td>
                    <td class="posts-content"><%= room.address %></td>
                    <td class="price-icon"><%= room.total %></td>   
                
                </tr>
            <% end %>
        <% else %>
          <p>検索結果はありません</p>
        <% end %>
        </tbody>
    
    </table>

</div>